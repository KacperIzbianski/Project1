<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/viewNumber3"
        android:layout_width="46dp"
        android:layout_height="39dp"
        android:text="@string/viewNumber3"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewNumber2"
        app:layout_constraintEnd_toStartOf="@+id/viewNumber4" />

    <TextView
        android:id="@+id/viewNumber1"
        android:layout_width="46dp"
        android:layout_height="39dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="156dp"
        android:text="@string/viewNumber1"
        app:layout_constraintEnd_toStartOf="@+id/viewNumber2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewNumber2"
        android:layout_width="46dp"
        android:layout_height="39dp"
        android:text="@string/viewNumber2"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewNumber1"
        app:layout_constraintEnd_toStartOf="@+id/viewNumber3" />

    <TextView
        android:id="@+id/viewNumber4"
        android:layout_width="46dp"
        android:layout_height="39dp"
        android:text="@string/viewNumber4"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewNumber3"
        app:layout_constraintEnd_toStartOf="@+id/viewNumber5" />

    <TextView
        android:id="@+id/viewNumber5"
        android:layout_width="46dp"
        android:layout_height="39dp"
        android:layout_marginEnd="72dp"
        android:text="@string/viewNumber5"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewNumber4"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/clickButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="116dp"
        android:text="@string/clickButton"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewNumber3" />

</android.support.constraint.ConstraintLayout>